        <article class="defaultP">
          <i>Isfjorden</i>
          <ol class="defaultList" type="1">
            <li data-name="1." value="1">
              <article class="listArticle" id="kapittel-4-ledd-2-punkt-1">
                <article class="legalP" id="kapittel-4-ledd-2-punkt-1-ledd-1">N 78&#xB0; 06&#x2032; &#xD8; 013&#xB0; 22&#x2032;</article>
              </article>
            </li>
            <li data-name="2." value="2">
              <article class="listArticle" id="kapittel-4-ledd-2-punkt-2">
